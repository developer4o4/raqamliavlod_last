#include <bits/stdc++.h>
using namespace std;

int main() {
	int n,x,c1=0,c=0;
	cin >> n;
	vector<int> a;
	for (int i=0;i<n;i++){
		cin >> x;
		if (x!=1)
		a.push_back(x);
		else c1++;
	}
	while (c1){
		if (a.size()==0) {a.push_back(1);c--;}
		if (a.size()==1) {a.push_back(1);c--;}
		c1--;c++;
		a.pop_back();
		a.push_back(1);
		a.push_back(1);
	}
	cout << c + (a.size()-1);
}

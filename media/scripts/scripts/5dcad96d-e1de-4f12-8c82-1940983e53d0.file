def min_operations_with_pointers(n, chain_lengths):
    chain_lengths.sort()

    start = 0 
    end = n - 1 

    operations = 0

    while start < end:
        if chain_lengths[start] == 1:
            end -= 2
        else:
            end -= 1
        start += 1
        operations += 1

    return operations

n = int(input())
chain_lengths = list(map(int, input().split()))

print(min_operations_with_pointers(n, chain_lengths))


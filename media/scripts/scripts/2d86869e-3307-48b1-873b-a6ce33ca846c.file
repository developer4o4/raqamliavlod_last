#include <bits/stdc++.h>

using namespace std;

void t_main(){
    int n;
    cin >> n;
    vector<int> a(n);
    for (int &i : a) cin >>i;
    sort(a.rbegin(),a.rend());
    int count = 0;
    int maks = 0;
    for(int i = 0; i < n; ++i){
        if(a[i] + n >= maks) ++ count;
        maks = max(maks, a[i] + i + 1);
    }
    cout << count;
}

int main(){
    int t=1;
    if (!t) cin >> t;
    while (t--){
        t_main();
    }
    return 0;
}
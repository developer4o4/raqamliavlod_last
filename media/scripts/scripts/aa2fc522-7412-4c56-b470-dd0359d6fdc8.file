def count_possible_champions(N, scores):
    max_points = max(scores)
    potential_points = [score + N for score in scores]
    max_final_points = max(potential_points)
    possible_champions = sum(1 for points in potential_points if points == max_final_points)
    
    return possible_champions

N = int(input())
scores = []
for _ in range(N):
    score = int(input())
    scores.append(score)

print(count_possible_champions(N, scores))

#include <bits/stdc++.h>
using namespace std;
#define int long long
bool check(int m, int n, vector<int> &a){
	for(int x: a){
		n -= (x + m - 1) / m;
	}
	return n >= 0;
}
signed main() {
	int n,m;
	cin >> n >> m;
	vector<int> a(m);
	for (int i=0;i<m;i++) cin >> a[i];
	int l=0,r=1e9;
	while (l<r){
		int mid=(l + r)/2;
		if(check(mid,n, a)){
			r=mid;
		}else {
			l=mid+1;
		}
	}
	cout << r;
}

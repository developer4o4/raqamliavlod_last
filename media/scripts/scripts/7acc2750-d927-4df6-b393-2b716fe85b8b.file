
#include <bits/stdc++.h>
using namespace std;
using ll = long long;
int main() {
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
	int n;
	cin >> n;
	int a[n];
	for(int&i:a)cin>>i;
	sort(a,a+n);
	int ans = (a[0] + n) >= (a[1] + n - 1) && (a[0] + n) >= (a[n - 1] + 1);
	for(int i = 1;i < n;++i){
		if(i < n - 1) ans += (a[i] + n) >= (a[n - 1] + 1);
		else ans += (a[i] + n) >= (a[n - 2] + 1);
	}
	cout << ans;
	
}

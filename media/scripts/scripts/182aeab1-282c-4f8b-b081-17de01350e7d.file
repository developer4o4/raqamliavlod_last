n = int(input())
s = list(map(int, input().split()))
c = s.count(1)
q = len(s)-c
count = 0
if c==0:
    print(len(s)-1)
else:
    if c*2<=q:
        q-=c*2
        count += c
        count = c+q
    else:
        c-=q//2
        count = q//2+q%2
        if c!=0:
            count += c//2
    print(count)




#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    int N;
    cin >> N;

    vector<int> scores(N);
    for (int i = 0; i < N; i++) {
        cin >> scores[i];
    }

    int maxScore = *max_element(scores.begin(), scores.end());

    int possW = 0;
    for (int i = 0; i < N; i++) {
        if (scores[i] + N >= maxScore) {
            possW++;
        }
    }
    cout << possW << endl;

    return 0;
}

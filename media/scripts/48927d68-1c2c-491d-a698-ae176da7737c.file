#include <bits/stdc++.h>
using namespace std;

int main() {
	int n,x;
	cin >> n;
	vector<int> ones;
	vector<int> all;
	for (int i=0;i<n;i++){
		cin >> x;
		if (x==1) ones.push_back(x);
		else all.push_back(x);
	}
	int c=0;
	while (!ones.empty()){
		ones.pop_back();
		if (all.size()>0){
			all.pop_back();
			all.pop_back();
			c++;
		}
		all.push_back(0);
		
	}
	cout << c+(all.size()-1);
}
